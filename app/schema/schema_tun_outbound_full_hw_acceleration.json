{
	"$ref": "schema_tun_common.json",
	"properties": {
		"Tunnel Configuration": {
			"propertyOrder": 100,
			"type": "object",
			"options": {
				"layout": "grid"
			},
			"properties": {
				"HW Acceleration Choice": {
					"type": "array",
					"format": "multiselect",
					"uniqueItems": true,
					"items": {
						"type": "string",
						"enum": [
							"Outbound Full Acceleration, Inbound Full Acceleration",
							"Outbound Full Acceleration, Inbound Partial Acceleration", 
							"Outbound Full Acceleration, Inbound No Acceleration"
						]
					},
					"default": "Outbound Full Acceleration, Inbound Full Acceleration"
				},
				"Pre-Shared Secret": {
					"description": "(ipsec.secrets)",
					"type": "string",
					"default": "ENET-LibreSwan"
				},
				"Encryption / Authentication": {
					"description": "(esp)",
					"type": "string",
					"options": {
						"input_width": "120px"
					},
					"default": "aes_gcm128-null"
				},
				"Inbound Static Routes": {
					"type": "string",
					"format": "html",
					"options": {
						"wysiwyg": true
					},
					"default": "10.0.1.1"
				},
				"LibreSwan-Specific Configuration": {
					"type": "string",
					"format": "html",
					"readOnly": true,
					"options": {
						"wysiwyg": true
					},
					"default": "type=tunnel\nauthby=secret\nike=aes-sha1;modp2048\nikev2=insist\nnarrowing=yes\n"
				}
			}
		}
	}
}
